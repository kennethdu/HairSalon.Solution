@{
  Layout = "_Layout";
}

<div class='container'>
  <h1>Hair Salon: Employees</h1>
  <hr />

  <h2>Employees</h2>
  @if (@Model.Count == 0)
  {
    <h4>No employee have been added yet!</h4>
  }
  @foreach (var employee in Model)
  {
    <h3><a href='/employee/@employee.GetEmployeeId()'>@employee.GetEmployee()</a></h3>
  }
<a href='/employee/new'><button class='btn btn-warning'>Add Employees</button></a>
