@{
  Layout = "_Layout";
}

<div class='container'>
  <h1>Hair Salon: Clients</h1>
  <hr/>

  <h2>Clients</h2>
  @if (@Model.Count == 0)
  {
    <h4>No clients have been added yet!</h4>
  }
  @foreach (var client in Model)
  {
    <h3><a href='/employee/@client.GetClientId()'>@client.GetClient()</a></h3>
  }
  <a href='/employee/new'><button class='btn btn-warning'>Add Employee</button></a>
  <a href = '/specialty/new'><button class='btn btn-danger'>Add new specialty</button></a>
   <a href = '/client/new'><button class='btn btn-danger'>Add new client</button></a>


  <a href='/'><button class='btn btn-success'>Back Home</button></a>
</div>
