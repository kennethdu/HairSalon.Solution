@{
  Layout = "_Layout";
}

<div class='container'>
  <h1>Hair Salon: Specialties</h1>
  <hr/>

  <h2>Specialties</h2>
  @if (@Model.Count == 0)
  {
    <h4>No Specialties have been added yet!</h4>
  }
  @foreach (var specialty in Model)
  {
    <h3><a href='/employee/@specialty.GetId()'>@specialty.GetSpecialty()</a></h3>
  }
  <a href = '/client/new'><button class='btn btn-success'>Add new client</button></a>
   <a href='/employee'><button class='btn btn-danger'>View Employees</button></a>
  <a href = '/specialty'><button class='btn btn-danger'>View specialty</button></a>
 


  <a href='/'><button class='btn btn-success'>Back Home</button></a>
</div>
