@{
  Layout = "_Layout";
}

<div class='container'>
  <h1>Hair Salon: Specialties</h1>
  <hr/>

  <h2>Specialties</h2>
  @if (@Model.Count == 0)
  {
    <h4>No Specialties have been added yet!</h4>
  }
  @foreach (var specialty in Model)
  {
    <h3><a href='/specialty/@specialty.GetId()'>@specialty.GetSpecialty()</a></h3>
  }
  
  <a href = '/specialty/new'><button class='btn btn-success'>Add new specialty</button></a>
  <a href='/employee'><button class='btn btn-warning'>View Employees</button></a>
  <a href = '/client'><button class='btn btn-warning'>View Clients</button></a>
  <a href='/'><button class='btn btn-success'>Back Home</button></a>
</div>
